# Load the Nix development shell
use flake

# Load environment variables from .env file
dotenv_if_exists

# Julia-specific configuration for Zed LSP
export JULIA_PROJECT="."
export JULIA_DEPOT_PATH=".julia"

# Set the julia command for Zed tasks and LSP
# This ensures Zed's Julia extension finds the right Julia binary
JULIA_HOME="$(dirname $(which julia))"
export julia="$(which julia)"
PATH_add "$JULIA_HOME"
